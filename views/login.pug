html
    head
        title="this is a message in the head tag"
        link(rel="stylesheet", href="/chat.css")
    body
        h3="Log in form"
        div
            form(action="/api/users/login", method="POST")
                div
                    label(for="username" class="labelsWidth")="Username (email):"
                    input(id="email" type="text" name="username")
                div
                    label(for="password" class="labelsWidth")="Password:"
                    input(id="password" type="text" name="password")
                button(id="")="log in"
        div
            span="Dont have an account?  "
            a(href="/api/users/signup" class="labelsWidth")="Sign Up"
        h5(class="chatTitleStyle")="Chat:"
        div(id="chatEntry")
            label(for="chatEmail" class="labelsWidth")="Email:"
            input(type="text" id="chatEmail" name="chatEmail")
            button(id="startChatBtn" class="chatBtns")="start chat"
        div(class="chatMsgs" id="chatMsgsList")
            ul(id="chatList")
                li="chatBot: Hola, soy el bot de chat, puedo ayudarte con lo siguiente: stock, orden o carrito"
            div
                input(type="text" id="chatMsg")
                button(id="sendMsgBtn" class="chatBtns")="Enviar mensaje"

        script(src="/socket.io/socket.io.js")
        script(src="/bot.js")

